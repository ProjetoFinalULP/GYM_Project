        link(rel="stylesheet" href="css/bootstrap/bootstrap-theme.css")
        link(rel="icon" href="favicon.ico")
    body
        .container-fluid

            nav.navbar.navbar-expand-lg.navbar-light
                a.navbar-brand(href="#") Pied Piper
                button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navigations-04", aria-controls="navigations-04", aria-expanded="false", aria-label="Toggle navigation")
                    span.navbar-toggler-icon

                .collapse.navbar-collapse#navigations-04
                    .d-flex.flex-column.flex-lg-row.align-items-start.justify-content-between.w-100
                        ul.navbar-nav.order-2.order-lg-1
                            li.nav-item
                                a.nav-link.active(href="#") Features #[span.sr-only (current)]
                            li.nav-item
                                a.nav-link(href="#") Enterprise
                            li.nav-item
                                a.nav-link(href="#") Support
                            li.nav-item.dropdown
                                a.nav-link.dropdown-toggle(href="#", data-toggle="dropdown") ICO
                                .dropdown-menu
                                    a.dropdown-item(href="#") Whitepaper
                                    a.dropdown-item(href="#") Token

                        ul.navbar-nav.order-1.order-lg-2
                            li.nav-item.d-flex
                                a.nav-link.p-0.m-0(href="#") #[img.rounded-circle(src="https://bootstrapshuffle.com/placeholder/pictures/bg_square.svg?primary=007bff", height="40" width="40", alt="")]

                            li.nav-item.dropdown
                                a.nav-link.dropdown-toggle#navigations-headers-04(href="#", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") Profile
                                .dropdown-menu.dropdown-menu-right(aria-labelledby="navigations-headers-04")
                                    a.dropdown-item(href="#") Account settings
                                    a.dropdown-item(href="#") Logout


            section
                .container
                    .row.justify-content-center
                        .col-md-5.col-lg-4
                            label.sr-only(for="input1-signin-03") Name
                            input.form-control.my-3.bg-light#input1-signin-03(type="text" placeholder="Name")
                            label.sr-only(for="input2-signin-03") Email
                            input.form-control.my-3.bg-light#input2-signin-03(type="email" placeholder="Email")
                            label.sr-only(for="input3-signin-03") Password
                            input.form-control.my-3.bg-light#input3-signin-03(type="password" placeholder="Password")
                            label.sr-only(for="input4-signin-03") Repeat password
                            input.form-control.my-3.bg-light#input4-signin-03(type="password" placeholder="Repeat password")
                            .form-check.form-group.mt-2
                                input.form-check-input#input5-signin-03(type="checkbox")
                                label.form-check-label.text-muted(for="input5-signin-03") Subscribe to the newsletter.
                            button.btn.btn-primary.btn-block.py-2.my-3 Sign up!

        script(src="js/jquery/jquery.min.js")
